<Window x:Class="SistemaHorarios.Client.View.Telas.Sobre"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sobre" Height="300" Width="400">
    <Grid>
        <Rectangle Fill="#FFF4F4F5" Height="180" Margin="30,30,30,0" Stroke="Black" VerticalAlignment="Top"/>
        <Button Style="{StaticResource DefaultButton}"
            Content="Fechar" HorizontalAlignment="Left" Margin="262,215,0,0" VerticalAlignment="Top" Width="100" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="50,114,0,0" TextWrapping="Wrap"
                   Text="Versão:" FontWeight="Bold" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="50,130,0,0" TextWrapping="Wrap"
        	Text="1.0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="50,164,0,0" TextWrapping="Wrap"
        	Text="Desenvolvido por:" FontWeight="Bold" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="50,180,0,0" TextWrapping="Wrap"
        	Text="Amanda Lopes, Angel Ojea" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="50,52,0,0" TextWrapping="Wrap"
        	Text="Sistema Horários" FontWeight="Bold" FontSize="20" VerticalAlignment="Top"/>
    </Grid>
</Window>
